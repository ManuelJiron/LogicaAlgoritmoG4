	// variables
	Definir numeroOriginal Como Entero;
	Definir sucesorDelNumero Como Entero;
	// Proceso 
	Escribir 'Ingrese un número:';
	Leer numeroOriginal;
	sucesorDelNumero <- numeroOriginal+1;
	Escribir 'El sucesor del número ingresado es:', sucesorDelNumero;
